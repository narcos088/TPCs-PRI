extends layout

block corpo
    .w3-container
        .w3-card-4 
            header.w3-container.w3-light-grey
                h3 Músicas da Banda
            .w3-container 
                table.w3-table.w3-bordered
                    tr
                        th Tipo de Música
                        th Lista de Músicas
                    each c in ind.tipos.tipo
                        tr
                            td= c.designacao
                            td 
                                ul
                                    each a in c.conjunto.musicas
                                        li
                                            a(href="http://localhost:4005/musica/" + a._id)= a.titulo
            footer.w3-container.w3-light-grey
                adress Gerado por BandaApp 