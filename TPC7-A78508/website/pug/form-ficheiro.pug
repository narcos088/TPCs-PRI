extends layout
block content 
    .w3-container   
        .w3-card-4  
            header.w3-container.w3-teal
                h3 Upload de um ficheiro
            .w3-container
                form.w3-container(action='',  method='POST', enctype='multipart/form-data')
                    div.w3-margin-top
                        label.w3-text-teal
                            b Ficheiro
                        input.w3-input.w3-border.w3-light-grey(type="file", name='ficheiro')
                    div.w3-margin-top
                        label.w3-text-teal
                            b Descrição
                        input.w3-input.w3-border.w3-light-grey(type="text", name='desc')
                    input.w3-btn.w3-blue-grey.w3-margin-top(type="submit", value='Enviar')
            br
            hr
            br
            block lista
